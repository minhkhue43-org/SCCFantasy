@model RegisterViewModel

@{
}

@section Styles{
    <link rel="stylesheet" href="~/theme/sneat/assets/vendor/css/pages/page-auth.css" />
}

<div class="authentication-wrapper authentication-basic container-p-y">
    <div class="authentication-inner">
        <!-- Register -->
        <div class="card">
            <div class="card-body">
                <h4 class="mb-2">Adventure starts here 🚀</h4>
                <p class="mb-2">Please create your account and start the adventure</p>
                <p class="mb-2 text-danger">Register feature has not been implemented yet. Just return to Login Page, input whatever you want and click Sign in</p>

                <form id="formAuthentication" class="mb-3" asp-action="Register" asp-controller="Account" method="POST">
                    <div class="mb-3">
                        <label for="username" class="form-label">Username</label>
                        <input type="text"
                               class="form-control"
                               id="username"
                               name="username"
                               placeholder="Enter your email or username"
                               autofocus />
                    </div>

                    <div class="mb-3 form-password-toggle">
                        <div class="d-flex justify-content-between">
                            <label class="form-label" for="password">Password</label>
                            @* <a href="auth-forgot-password-basic.html">
                            <small>Forgot Password?</small>
                            </a>*@
                        </div>
                        <div class="input-group input-group-merge">
                            <input type="password"
                                   id="password"
                                   class="form-control"
                                   name="password"
                                   placeholder="&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;"
                                   aria-describedby="password" />
                            <span class="input-group-text cursor-pointer"><i class="bx bx-hide"></i></span>
                        </div>
                    </div>

                    <div class="mb-3 form-password-toggle">
                        <div class="d-flex justify-content-between">
                            <label class="form-label" for="ConfirmedPassword">Confirmed Password</label>
                            @* <a href="auth-forgot-password-basic.html">
                            <small>Forgot Password?</small>
                            </a>*@
                        </div>
                        <div class="input-group input-group-merge">
                            <input type="password"
                                   id="ConfirmedPassword"
                                   class="form-control"
                                   name="ConfirmedPassword"
                                   placeholder="&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;"
                                   aria-describedby="password" />
                            <span class="input-group-text cursor-pointer"><i class="bx bx-hide"></i></span>
                        </div>
                    </div>
                 
                    <div class="mb-3">
                        <button class="btn btn-primary d-grid w-100" type="submit">Register</button>
                    </div>
                </form>

                <p class="text-center">
                    <span>Already have an account?</span>
                    <a asp-area="" asp-controller="Account" asp-action="Login">
                        <span>Sign in instead</span>
                    </a>
                </p>
            </div>
        </div>
        <!-- /Register -->
    </div>
</div>
