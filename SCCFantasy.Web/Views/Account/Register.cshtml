@model RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

@section Styles{
    <link rel="stylesheet" href="~/theme/sneat/assets/vendor/css/pages/page-auth.css" />
}

<div class="authentication-wrapper authentication-basic container-p-y">
    <div class="authentication-inner">
        <!-- Register -->
        <div class="card">
            <div class="card-body" id="authentication-div">
                <h4 class="mb-2">Adventure starts here 🚀</h4>
                <p class="mb-4">Please create your account and start the adventure</p>

                <form id="form-authentication" class="mb-3" asp-action="Register" asp-controller="Account" method="POST">
                    <div class="text-danger validation-summary"></div>

                    <div class="mb-3">
                        <label asp-for="UserName" class="form-label">Username</label>
                        <input type="text" asp-for="UserName" class="form-control"/>
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>

                    <div class="mb-3 form-password-toggle">
                        <div class="d-flex justify-content-between">
                            <label class="form-label" asp-for="Password">Password</label>
                            @* <a href="auth-forgot-password-basic.html">
                            <small>Forgot Password?</small>
                            </a>*@
                        </div>
                        <div class="input-group input-group-merge">
                            <input type="password" asp-for="Password" class="form-control" aria-describedby="password" />
                            <span class="input-group-text cursor-pointer"><i class="bx bx-hide"></i></span>
                        </div>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="mb-3 form-password-toggle">
                        <div class="d-flex justify-content-between">
                            <label class="form-label" asp-for="ConfirmedPassword">Confirmed Password</label>
                            @* <a href="auth-forgot-password-basic.html">
                            <small>Forgot Password?</small>
                            </a>*@
                        </div>
                        <div class="input-group input-group-merge">
                            <input type="password" asp-for="ConfirmedPassword" class="form-control" aria-describedby="confirmed-password" />
                            <span class="input-group-text cursor-pointer"><i class="bx bx-hide"></i></span>
                        </div>
                        <span asp-validation-for="ConfirmedPassword" class="text-danger"></span>
                    </div>
                 
                    <div class="mb-3">
                        <button class="btn btn-primary d-grid w-100" type="button" data-action="register">Register</button>
                    </div>
                </form>

                <p class="text-center">
                    <span>Already have an account?</span>
                    <a asp-area="" asp-controller="Account" asp-action="Login">
                        <span>Sign in instead</span>
                    </a>
                </p>
            </div>
        </div>
        <!-- /Register -->
    </div>
</div>

@section Scripts{
    <script src="~/js/pages/user-account.js" type="text/javascript"></script>
}